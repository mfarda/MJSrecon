# Secrets Configuration Example
# Copy this file to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to version control!

# API Tokens (set these as environment variables or fill in directly)
api_tokens:
  github: "${GITHUB_TOKEN}"  # or "ghp_your_actual_token_here"
  gitlab: "${GITLAB_TOKEN}"  # or "glpat_your_actual_token_here"
  bitbucket: "${BITBUCKET_TOKEN}"  # or "your_actual_token_here"
  gitea: "${GITEA_TOKEN}"  # or "your_actual_token_here"

# Usernames (for platforms that require them)
usernames:
  bitbucket: "${BITBUCKET_USERNAME}"  # or "your_username_here"

# URLs (for self-hosted instances)
urls:
  gitea: "${GITEA_URL}"  # or "https://your-gitea-instance.com"

# Proxy Configuration (if using authenticated proxy)
proxy:
  username: "${PROXY_USERNAME}"  # or "your_proxy_username"
  password: "${PROXY_PASSWORD}"  # or "your_proxy_password"

# Database Credentials (if using database storage)
database:
  host: "${DB_HOST}"  # or "localhost"
  port: "${DB_PORT}"  # or 5432
  name: "${DB_NAME}"  # or "mjsrecon"
  username: "${DB_USERNAME}"  # or "mjsrecon_user"
  password: "${DB_PASSWORD}"  # or "your_db_password"

# External Service Keys (if using additional services)
external_services:
  slack_webhook: "${SLACK_WEBHOOK_URL}"  # or "https://hooks.slack.com/..."
  discord_webhook: "${DISCORD_WEBHOOK_URL}"  # or "https://discord.com/api/webhooks/..."
  email_smtp_password: "${SMTP_PASSWORD}"  # or "your_smtp_password" 